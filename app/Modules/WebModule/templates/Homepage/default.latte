{block scripts}
	<script>
		function copyIP()
		{
			var text = {$serverIp};
			navigator.clipboard.writeText(text).then(function ()
			{
				console.log('Async: Copying to clipboard was successful!');
			}, function (err)
			{
				console.error('Async: Could not copy text: ', err);
			});
			document.getElementById("copyTooltip").textContent = "Zkopírováno";
		}

		function showTooltip()
		{
			document.getElementById("copyTooltip").textContent = "Klikni pro zkopírování IP";
		}
	</script>
{/block}