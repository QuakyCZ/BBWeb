{block alert}
    {varType bool $alertEnabled}
    {varType \stdClass $alert}
    <div n:if="$alertEnabled" class="announce" style="background-color: {$alert->backgroundColor|noescape}; color: {$alert->fontColor|noescape} !important;">
        <div class="row d-flex">
            <div class="col-auto d-flex justify-content-center align-items-center">
                <div class="icon-box" style="background-color: {$alert->iconBackgroundColor|noescape}">
                    <i class="{$alert->icon}"></i>
                </div>
            </div>
            <div class="col d-flex align-items-center">
                <p class="m-0 fw-bold fs-6" style="color: {$alert->fontColor|noescape} !important;">
                    {$alert->message}
                </p>
            </div>
        </div>
    </div>
{/block}


{block navbar}
    <nav class="navbar navbar-expand-xl navbar-dark">
        <div class="container-fluid">
            <a class="navbar-brand" n:href=":Web:Homepage:">
                <img src="./img/logo.svg" alt="" width="150px">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mt-3 mt-xl-0 mb-lg-0">
                    <li class="nav-item">
