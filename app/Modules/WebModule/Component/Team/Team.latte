<div class="team" id="team">
    <h1>NÁŠ <span style="color: white">TÝM</span></h1>

    {foreach $roles as $role}
        <h2>{$role['name']}</h2>
        <div class="members">
            {foreach $role['users'] as $member}
                <div class="member-box">
                    <div class="skin-part">
                        <img
                                src="https://minotar.net/avatar/{$member->details['minecraft_nick']}/250"
                                alt="{$member->details['minecraft_nick']}"
                                class="skin"
                                width="70px"
                        >
                    </div>
                    <div class="desc-part">
                        <h3>{$member->details['minecraft_nick']}</h3>
                        <p class="member-position">{$member->details['position']}</p>
                    </div>
                    <div class="social-part"></div>
                </div>
            {/foreach}
        </div>
    {/foreach}

</div>