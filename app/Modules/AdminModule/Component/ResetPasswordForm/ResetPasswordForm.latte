<div>
{form form class => "form-horizontal form-normal", role => "form"}
    <div class="errors" n:if="$form->hasErrors()">
        <div n:foreach="$form->errors as $error" class="alert alert-danger error" role="alert">
            <div class="flash-message-body">{$error}</div>
        </div>
    </div>

    <div class="row m-0 w-100 g-1">
        <div class="form-group col-12 mb-3">
            <label for="floatingInput"><i class="phosphor ph-fingerprint"></i> Nové heslo</label>
            {input password class => "form-control"}
        </div>
        <div class="form-group col-12 mb-3">
            <label for="floatingInput"><i class="phosphor ph-fingerprint"></i> Nové heslo znovu</label>
            {input password_check class => "form-control"}
        </div>
        <div class="form-group col-12 mb-3">
            {input recaptcha, data-theme => 'dark'}
            <script src='https://www.google.com/recaptcha/api.js'></script>
        </div>
        <div class="form-group col-12">
            {input save class => "btn btn-primary py-2 w-100"}
        </div>
    </div>
    <script type="text/javascript">
        document.write('<input type="hidden" name="x_url" value="no' + 'spam">');
    </script>
{/form}
</div>