<html>
<head>
    <meta charset="UTF-8">
    <meta name="robots" content="noindex">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="BeastBlock.cz | Klientská zóna" property="og:title"/>
    <meta content="Vítej v klientské zóně! Spravuj svůj účet nebo se podívej na své statistiky." property="og:description"/>
    <meta content="https://beastblock.cz/client/" property="og:url"/>
    <meta content="{$basePath}/img/beastblock_icon_website.png" property="og:image"/>
    <meta content="#ff9b05" data-react-helmet="true" name="theme-color"/>
    <meta name="author" content="Quaky & Caidorn & sCrapy">
    <meta name="project" content="BeastBlock.cz">

    <link rel="apple-touch-icon" sizes="180x180" href="{$basePath}/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="{$basePath}/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="{$basePath}/favicon/favicon-16x16.png">
    <link rel="manifest" href="{$basePath}/favicon/site.webmanifest">
    <link rel="mask-icon" href="{$basePath}/favicon/safari-pinned-tab.svg" color="#5bbad5">

    <link rel="stylesheet" type="text/css"  href="/webpack/stylesAdmin.bundle.css">
    <link rel="stylesheet" href="{$basePath}/libs/fontawesome/css/all.css">
    {block styles}{/block}

    <script>
        LiveFormOptions = {
            messageErrorClass: 'text-warning',
        };
    </script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="/webpack/scriptsAdmin.bundle.js" nonce=""></script>

    <title>Uživatelská zóna</title>

    {include styles}
</head>
{if $user->isLoggedIn()}
    {import '_adminLayout.latte'}
{else}
    {import '_plainLayout.latte'}
{/if}
<body>
    {include body}
</body>
{snippet flashes}
    <script>
        {foreach $flashes as $flash}
            {if str_starts_with($flash->type, 'modal')}
                Swal.fire({
                    title: {$flash->title},
                    icon: {\App\Enum\EFlashMessageType::TYPE_TO_FA_ICON[$flash->type]},
                    html: {$flash->message},
                    customClass: {
                        confirmButton: 'btn btn-outline-success',
                    },
                    buttonsStyling: false,
                    focusConfirm: false
                });
            {else}
                iziToast.show({
                    title: {_'flash.'.$flash->type},
                    message: {$flash->message|translate},
                    icon: {\App\Enum\EFlashMessageType::TYPE_TO_FA_ICON[$flash->type]},
                    iconColor: {\App\Enum\EFlashMessageType::TYPE_TO_ICON_COLOR[$flash->type]},
                    theme: 'dark',
                    position: 'topRight',
                    class: {$flash->type},
                    timeout: 5000,
                    progressBar: true
                });
            {/if}
        {/foreach}
    </script>
{/snippet}
{block scripts}{/block}
</html>